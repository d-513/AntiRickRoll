{
  "manifest_version": 2,
  "name": "AntiRickroll",
  "version": "0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "html/popup.html"
  },
  "options_ui": {
    "page": "html/options.html",
    "new_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "webRequest",
    "*://*.youtube.com/watch?v=dQw4w9WgXcQ",
    "webRequestBlocking"
  ],
  "web_accessible_resources": ["/html/*"]
}
